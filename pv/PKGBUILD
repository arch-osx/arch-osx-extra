pkgname=pv
pkgver=1.6.0
pkgrel=1
pkgdesc='A terminal-based tool for monitoring the progress of data through a pipeline.'
arch=('x86_64')
url='http://www.ivarch.com/programs/pv.shtml'
license=('custom:Artistic 2.0')
depends=('libc')
source=("http://www.ivarch.com/programs/sources/$pkgname-$pkgver.tar.bz2")
md5sums=('e163d8963c595b2032666724bc509bcc')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"

  ./configure --prefix=/usr/local --mandir=/usr/local/share/man
  make
}
  
package() {
  cd "${srcdir}/${pkgname}-${pkgver}"

  make DESTDIR="$pkgdir" install
  install -dm755 "$pkgdir/usr/local/share/licenses/$pkgname"
  install -m644 doc/COPYING "$pkgdir/usr/local/share/licenses/$pkgname/COPYING"
}

pkgname=mpdecimal
pkgver=2.4.2
pkgrel=1
pkgdesc="Package for correctly-rounded arbitrary precision decimal floating point arithmetic"
arch=('x86_64')
url="http://www.bytereef.org/mpdecimal/index.html"
license=('custom')
depends=('libc')
source=(http://www.bytereef.org/software/${pkgname}/releases/${pkgname}-${pkgver}.tar.gz)

build() {
  cd ${pkgname}-${pkgver}

  ./configure --prefix=/usr/local
  make
}

package() {
  cd ${pkgname}-${pkgver}
  make DESTDIR="${pkgdir}" install

  #mv $pkgdir/usr/local/lib/libmpdec{.so.${pkgver},.${pkgver}.dylib}
  #rm $pkgdir/usr/local/lib/libmpdec.so
  #rm $pkgdir/usr/local/lib/libmpdec.so.2
  #ln -sf libmpdec.${pkgver}.dylib $pkgdir/usr/local/lib/libmpdec.dylib
  #ln -sf libmpdec.${pkgver}.dylib $pkgdir/usr/local/lib/libmpdec.2.dylib

  install -dm755 "${pkgdir}/usr/local/share/licenses/$pkgname"
  install -m644 LICENSE.txt "${pkgdir}/usr/local/share/licenses/$pkgname/LICENSE.txt"
}

sha256sums=('83c628b90f009470981cf084c5418329c88b19835d8af3691b930afccb7d79c7')

pkgname=python3-pyparsing
pkgname=('python3-pyparsing')
pkgver=2.1.1
pkgrel=1
pkgdesc='General parsing module for Python'
arch=('any')
url='http://pyparsing.wikispaces.com/'
makedepends=('python3-setuptools')
license=('MIT')
source=("http://downloads.sourceforge.net/pyparsing/pyparsing-$pkgver.tar.gz")
sha256sums=('9bae5cd4cbee6da0d7d8d9a1647f5253a3b89652e707647eaf1961f4932ae6c6')

#prepare() {
#  cp -r "pyparsing-$pkgver" py2
#}

package_python3-pyparsing() {
  depends=('python3')
  cd "pyparsing-$pkgver"

  rm -rf build
  python3 setup.py install --prefix=/usr/local --root="$pkgdir" --optimize=1
  install -dm755 "$pkgdir/usr/local/share/licenses/$pkgname"
  install -m644 LICENSE "$pkgdir/usr/local/share/licenses/$pkgname/LICENSE"
}

